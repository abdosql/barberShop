{% extends 'base.html.twig' %}

{% block title %}Hello NotificationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>/var/www/html/src/Controller/NotificationController.php</code></li>
        <li>Your template at <code>/var/www/html/templates/notification/index.html.twig</code></li>
    </ul>
</div>

{% block content %}
    <div>
        <h2>Appointment Confirmation</h2>
        <p>Dear {{ customer_name }},</p>
        <p>Your appointment has been confirmed with the following details:</p>
        <ul>
            <li>Service: {{ service }}</li>
            <li>Date and Time: {{ date_time }}</li>
            <li>Barber: {{ barber_name }}</li>
        </ul>
        <p>Thank you for choosing our service!</p>
    </div>
{% endblock %}
{% endblock %}
